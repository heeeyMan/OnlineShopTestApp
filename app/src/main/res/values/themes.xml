<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestApp" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IconProfileStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_user_icon</item>
    </style>

    <style name="LatestIconStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">9%</item>
    </style>

    <style name="ColorIconStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">9%</item>
        <item name="strokeColor">@color/gray_800</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="SmallIconStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6%</item>
    </style>

    <style name="FlashSaleIconStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">11%</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/blue_600</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">@integer/zero</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>