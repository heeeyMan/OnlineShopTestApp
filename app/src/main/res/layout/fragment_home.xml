<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".ui.modules.home.HomeFragment">

    <FrameLayout
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/search_text"
            android:layout_width="@dimen/view_size_262"
            android:layout_height="@dimen/view_size_24"
            android:autofillHints=""
            android:background="@drawable/search_back"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="@string/what_you_looking"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_810"
            android:textSize="@dimen/text_size_9" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/margin_19"
            android:src="@drawable/search" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/red_600"
        android:textSize="@dimen/text_size_17"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/ProgressBarStyle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/try_again"
        android:layout_width="@dimen/view_size_95"
        android:layout_height="@dimen/view_size_50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_121"
        android:background="@drawable/item_background_cor_9"
        android:backgroundTint="@color/gray_300"
        android:gravity="center"
        android:text="@string/try_again"
        android:textColor="@color/red_600"
        android:textSize="@dimen/text_size_17"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>