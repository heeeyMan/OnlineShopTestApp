<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_header_background"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/view_size_50"
        android:layout_height="@dimen/view_size_50"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/padding_1"
        android:paddingVertical="@dimen/padding_1"
        android:scaleType="fitXY"
        android:src="@drawable/avatar"
        app:shapeAppearanceOverlay="@style/IconProfileStyle"
        app:strokeColor="@color/gray_825"
        app:strokeWidth="@dimen/stroke_width" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/margin_17"
        android:fontFamily="@font/montserrat_black"
        android:text="@string/satria_adhi_pradana"
        android:textColor="@color/gray_850"
        android:textSize="@dimen/text_size_15" />
</androidx.appcompat.widget.LinearLayoutCompat>